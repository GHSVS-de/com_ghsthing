{
  "name": "com_ghsthing_fields.json",
  "version": "{{version}}",
  "description": "Ermöglicht das Umsortieren, Ändern von Feldern in Edit-Formularen.",
	"description2": "z.B. dem Layout joomla.edit.publishingdata kann man ein $this->fields übergeben.",
	"ghsthing.edit": {
		"publishingdata": {
			"fields": [
				"id",
				"version",
				"created",
				"publish_up",
				"publish_down",
				"featured_up",
				"featured_down",
				"modified",
				"created_by",
				"modified_by"
			],
			"colClass": "col-2",
			"hidden_fields": [
				"publish_upnureinTest"
			]
		},
		"global": {
			"fields": [
				"catid",
				"state",

				"access",
				"language",
				"tags",
				"note",
				"version_note",
				"featured"
			],
			"colClass": "col-4",
			"hidden_fields": [
				"publish_upnureinTest"
			],
			"disabled_fields": [
				"version_note"
			]
		}
	}
}
