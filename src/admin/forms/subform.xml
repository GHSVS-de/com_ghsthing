<?xml version="1.0" encoding="UTF-8"?>
<form>

	<field name="foto" type="media" default="" filter="string"
 		label="GHSVS_FOTO"
		hiddenLabel="true"
		preview="true" />

	<field name="active" type="list" default="1" filter="integer"
		label="GHSVS_ACTIVE">
		<option value="0">JNO</option>
		<option value="1">JYES</option>
	</field>

	<field name="alt" type="textarea" default="" filter="trim"
		label="GHSVS_IMAGES_ALT" />

	<field name="title" type="textarea" default="" filter="trim"
		label="GHSVS_IMAGES_TITLE" />

	<field name="text" type="textarea" default="" filter="safehtml"
		label="GHSVS_IMAGES_CAPTION" />

	<field name="cssClass"
		type="textarea"
		label="GHSVS_IMAGES_CLASS"
		validate="CssIdentifier"
		/>
</form>
